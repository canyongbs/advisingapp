{
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "plugins": ["prettier-plugin-blade", "prettier-plugin-organize-imports"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade"
            }
        },
        {
            "files": ["*.js", "*.css", "*.vue"],
            "options": {
                "vueIndentScriptAndStyle": true
            }
        }
    ]
}
